{
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/src/server.js"
      }
    ],
    "builds": [
      {
        "src": "src/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/src/server.js" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
  